{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { 
        "distDir": ".next",
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "admin-frontend/package.json",
      "use": "@vercel/next",
      "config": { 
        "distDir": ".next",
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "node-express-typeorm/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node-express-typeorm/src/**/*.ts"],
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "admin-backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["admin-backend/src/**/*.ts"],
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
        "src": "/_next/static/(.*)",
        "dest": "/frontend/.next/static/$1"
    },
    {
        "src": "/_next/static/(.*)",
        "dest": "/admin-frontend/.next/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "node-express-typeorm/src/index.ts",
      "continue": true
    },
    {
      "src": "/graphql",
      "dest": "/graphql-api/graphql",
      "continue": true
    },
    {
      "src": "/graphql-api/(.*)",
      "dest": "admin-backend/src/index.ts",
      "continue": true
    },
    {
      "src": "/admin(/?.*)",
      "dest": "admin-frontend",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "frontend",
      "continue": true
    }
  ]
}